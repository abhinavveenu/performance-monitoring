{
  "name": "perf-monitor-sdk",
  "version": "1.0.0",
  "description": "Lightweight, framework-agnostic performance monitoring SDK for tracking Core Web Vitals and custom metrics",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json && rollup -c",
    "clean": "rm -rf dist",
    "dev": "tsc -w -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "performance",
    "web-vitals",
    "monitoring",
    "analytics",
    "core-web-vitals",
    "lcp",
    "fid",
    "cls",
    "inp",
    "ttfb",
    "rum",
    "real-user-monitoring",
    "observability",
    "apm"
  ],
  "author": "Performance Monitoring Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/perf-monitor"
  },
  "bugs": {
    "url": "https://github.com/your-org/perf-monitor/issues"
  },
  "homepage": "https://github.com/your-org/perf-monitor#readme",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "web-vitals": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "rollup": "^3.29.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.6.2"
  }
}

